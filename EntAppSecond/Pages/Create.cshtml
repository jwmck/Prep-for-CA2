@page
@model Validation.Pages.CreateStudentsModel
@{
    ViewData["Title"] = "Create a Student";
}


<form method="post">
    <fieldset>
        <legend>Enter Student Info</legend>

        <div class="form-group">
            <label asp-for="Student.FirstName" class="col-sm-2 control-label">
                First Name
            </label>
            <div class="col-sm-10">
                <input asp-for=Student.FirstName class="form-control" placeholder="Enter First Name">
            </div>
        </div>

        <div class="form-group">
            <label asp-for=Student.LastName class="col-sm-2 control-label">
                Last Name
            </label>
            <div class="col-sm-10">
                <input asp-for=Student.LastName class="form-control" placeholder="Enter Second Name" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for=Student.StudentID class="col-sm-2 control-label">
                Student ID
            </label>
            <div class="col-sm-10">
                <input asp-for=Student.StudentID class="form-control" placeholder="S1234567" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Student.DOB" class="col-sm-2 control-label">
                DOB
            </label>
            <div class="col-sm-10">
                <input asp-for=Student.DOB class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for=Student.NrModules class="col-sm-2 control-label">
                Modules
            </label>
            <div class="col-sm-10">
                <input asp-for=Student.NrModules class="form-control" placeholder="Enter Number of Modules" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Student.Height" class="col-sm-2 control-label">
                Height (cm)
            </label>
            <div class="col-sm-10">
                <input asp-for=Student.Height class="form-control" placeholder="Enter height in centimeters" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for=Student.Email class="col-sm-2 control-label">
                Email
            </label>
            <div class="col-sm-10">
                <input asp-for=Student.Email class="form-control" placeholder="example@example.com" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for=Student.EmailConfirm class="col-sm-2 control-label">
                Confirm Email
            </label>
            <div class="col-sm-10">
                <input asp-for=Student.EmailConfirm class="form-control" placeholder="example@example.com" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2 control-label">
                <button class="btn btn-default" type="submit">Press Me</button>
            </div>
        </div>

        <div class="validation-summary-errors" asp-validation-summary=All style="float:left; font-weight:bold; color:darkred;">
        </div>

    </fieldset>
</form>
