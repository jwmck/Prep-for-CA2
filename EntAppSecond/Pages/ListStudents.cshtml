@page
@model Validation.Pages.ListStudentsModel
@{
    ViewData["Title"] = "ListStudents";
}

<h4>@Model.Message</h4>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Number of Modules</th>
            <th>Height (cm)</th>
            <th>Email</th>
            <th>EmailConfirm</th>
            <th>Edit Details</th>
            <th>Delete Record</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var student in Model.Students)
        {
            // list out each of the properties.
        <tr>

            <td>@student.StudentID</td>
            <td>@student.FirstName</td>
            <td>@student.LastName</td>
            <td>@student.DOB</td>
            <td>@student.NrModules</td>
            <td>@student.Height</td>
            <td>@student.Email</td>
            <td>@student.EmailConfirm</td>
            <td> <a asp-page="EditStudent" asp-route-id="@student.StudentID">Edit</a> </td>
            <td> <a asp-page="StudentDetails" asp-route-id="@student.StudentID">Delete</a> </td>

        </tr>
        }
    </tbody>
</table>





